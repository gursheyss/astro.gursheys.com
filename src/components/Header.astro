---
import LightSwitch from "./Lightswitch.svelte";
import { Image } from "astro:assets";
const { lastUpdated } = Astro.props;
---

<div class="flex justify-between items-center">
  <div class="flex items-center space-x-1">
    <a
      href="/"
      class="text-2xl pl-10 z-10 bg-gradient-to-tr from-[#FFB6C1] via-pink to-[#cf67a9] bg-clip-text font-geistMono font-bold text-neutral-700 text-transparent underline underline-offset-4"
      >gursh</a
    >
    <LightSwitch client:load />
  </div>
  <div class="pr-4 text-right flex items-center">
    <Image
      loading="eager"
      class="pixelated mt-1"
      src="/clock.png"
      alt="clock"
      height="20"
      width="20"
    />
    <span class="ml-1">{lastUpdated}</span>
  </div>
</div>
