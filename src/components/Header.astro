---
import { Lightswitch } from "./Lightswitch";
import { Image } from "astro:assets";
const { lastUpdated } = Astro.props;
---

<div class="flex items-center justify-between">
  <div class="flex items-center space-x-1">
    <a
      href="/"
      class="font-geistMono z-10 bg-gradient-to-tr from-[#FFB6C1] via-pink to-[#cf67a9] bg-clip-text pl-8 text-2xl font-bold text-neutral-700 text-transparent underline underline-offset-4"
      >gursh</a
    >
    <Lightswitch client:load />
  </div>
  <div class="flex items-center pr-4 text-right">
    <Image
      loading="eager"
      class="pixelated mt-1"
      src="/clock.png"
      alt="clock"
      height="20"
      width="20"
    />
    <span class="ml-1">{lastUpdated}</span>
  </div>
</div>
