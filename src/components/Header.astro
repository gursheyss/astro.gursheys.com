---
import LightSwitch from "./Lightswitch.svelte";
import { Image } from "astro:assets";
const { lastUpdated } = Astro.props;
---

<div class="flex justify-between items-center">
  <div class="flex items-center space-x-1">
    <a href="/" class="block text-2xl pl-10 z-10">gursh</a>
    <LightSwitch client:load />
  </div>
  <div class="pr-4 text-right flex items-center">
    <Image
      loading="eager"
      class="pixelated mt-1"
      src="/clock.png"
      alt="clock"
      height="20"
      width="20"
    />
    <span class="ml-1">{lastUpdated}</span>
  </div>
</div>
