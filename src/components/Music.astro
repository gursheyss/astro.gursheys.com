---
interface Props {
  currentSong: Song | null;
  playlists: Playlist[] | null;
  topSongs: Song[] | null;
}
const { currentSong, playlists, topSongs } = Astro.props;
import type { Playlist, Song } from "../lib/spotify";
import NowPlaying from "./NowPlaying.astro";
---

<div class="border-box cutout-title" data-title="ðŸ“» music">
  <div class="content">
    {
      currentSong && playlists && topSongs && (
        <>
          <NowPlaying currentSong={currentSong} />
          <div class="border-box cutout-title" data-title="playlists">
            <div class="grid gap-2 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-1 xl:grid-cols-2">
              {playlists.slice(0, 10).map((playlist) => (
                <a
                  href={playlist.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="space-y-2"
                >
                  <div class="flex items-center space-x-2">
                    <img
                      src={playlist.image}
                      alt={playlist.title}
                      class="h-12 w-12 rounded-sm object-cover"
                    />
                    <div class="flex-grow">
                      <p class="text-sm font-semibold">
                        {playlist.title.toLowerCase()}
                      </p>
                      <p class="text-xs text-gray-500">
                        {playlist.count} tracks
                      </p>
                    </div>
                  </div>
                </a>
              ))}
            </div>
          </div>
          <div class="border-box cutout-title" data-title="top songs">
            <div class="grid gap-2 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-1 xl:grid-cols-2">
              {topSongs.map((song) => (
                <a
                  href={song.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="space-y-2"
                >
                  <div class="flex">
                    <img
                      src={song.image}
                      alt={song.title}
                      class="h-12 w-12 rounded-sm object-cover"
                    />
                    <div class="ml-2">
                      <p class="text-sm font-semibold">
                        {song.title.toLowerCase()}
                      </p>
                      <p class="text-xs text-gray-500">
                        {song.artist.toLowerCase()}
                      </p>
                    </div>
                  </div>
                </a>
              ))}
            </div>
          </div>
        </>
      )
    }
  </div>
</div>

<script>
  import { initAudioToggle } from "./audioToggle";

  if (typeof window !== "undefined") {
    window.addEventListener("load", () => {
      initAudioToggle();
    });
  }
</script>
